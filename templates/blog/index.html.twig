{% extends 'base.html.twig' %}

{% block title %}Mon blog perso Wsh{% endblock %}

{% block body %}
    {% for publication in publications %}
            <h4>{{ publication.title }}</h4>
            <p>
                <a href="{{ path('publication', { id: publication.id }) }}">Plus de détails</a>
            </p>
    {% endfor %}
    {% if previous >= 0 %}
        <a href="{{ path('app_blog', { offset: previous }) }}">Précédent</a>
    {% endif %}
    {% if next < publications|length %}
        <a href="{{ path('app_blog', { offset: next }) }}">Suivant</a>
    {% endif %}
{% endblock %}
